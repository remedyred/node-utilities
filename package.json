{
	"name": "@snickbit/node-utilities",
	"version": "4.7.11",
	"description": "A collection of simple Node.js helpers",
	"license": "MIT",
	"exports": {
		"require": "./dist/index.js",
		"import": "./dist/index.mjs",
		"types": "./dist/index.d.ts"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup --minify",
		"check": "pnpm run lint && pnpm run typecheck",
		"dev": "tsup --watch",
		"lint": "eslint \"**/*.{ts,json,yml,yaml}\" --cache --color",
		"lint:fix": "pnpm run lint --fix",
		"docs": "typedoc src/index.ts",
		"index": "indexer",
		"pr": "pnpm run lint:fix && pnpm run typecheck && pnpm run build && pnpm run docs",
		"release": "semantic-release",
		"typecheck": "tsc --noEmit"
	},
	"release": {
		"extends": [
			"@snickbit/semantic-release"
		]
	},
	"dependencies": {
		"@snickbit/out": "^2.2.0",
		"@snickbit/utilities": "^3.11.4",
		"ansi-styles-template": "^1.0.0",
		"cli-progress": "3.12.0",
		"is-wsl": "^2.2.0",
		"lodash.throttle": "^4.1.1",
		"nanospinner": "^1.1.0",
		"prompts": "^2.4.2"
	},
	"devDependencies": {
		"@snickbit/eslint-config": "1.5.4",
		"@snickbit/indexer": "2.9.8",
		"@snickbit/semantic-release": "1.6.7",
		"@types/node": "20.4.2",
		"eslint": "8.45.0",
		"semantic-release": "20.1.3",
		"tsup": "7.1.0",
		"typedoc": "0.24.8",
		"typedoc-plugin-markdown": "3.15.3",
		"typescript": "5.1.6"
	},
	"engines": {
		"node": ">= 14.17"
	}
}
